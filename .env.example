# Database Configuration (SQLite)
DB_PATH=./skillswap.db

# Session Configuration
SESSION_SECRET=your_very_secure_random_secret_key_change_this_in_production

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI API Key (optional - for AI Tutor feature)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Note: AI Tutor is an optional feature. The app works fully without it.

# Admin Default Account
ADMIN_EMAIL=admin@skillswap.local
ADMIN_PASSWORD=AdminPass123!

# Security
BCRYPT_ROUNDS=10

# Encryption Key for sensitive data (64 hex characters = 256-bit key)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_for_production_use

